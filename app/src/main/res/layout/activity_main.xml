<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/candara_light"
            android:id="@+id/btnPlayAgainView"
            android:onClick="btnPlayAgainOnClick"
            android:layout_marginTop="10dp"
            android:width="110dp"
            android:visibility="gone"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again"/>

        <Button
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/candara_light"
            android:onClick="btnResetOnClick"
            android:text="Reset" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/century_gothic_bold"
                android:text="Player 1: "
                android:textColor="@color/player1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/century_gothic_bold"
                android:text="0"
                android:textColor="@color/player1"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/century_gothic_bold"
                android:text="Player 2: "
                android:textColor="@color/player2"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/century_gothic_bold"
                android:text="0"
                android:textColor="@color/player2"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>



    <!-- All buttons for the game -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:fontFamily="@font/comic_sans_ms"
                android:gravity="center_horizontal"
                android:text="Turn for Player 1"
                android:textSize="20sp" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="110dp"
                    android:height="110dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/arial_rounded_mt_std"
                    android:onClick="btnOnClick"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>